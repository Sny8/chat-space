.chat-side
  .side-header
    .side-header_box
      %p.side-header_box_user-name masa
      = current_user.name
      %ul.side-header_box_menu
        %li.side-header_box_menu_edit-user
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        %li.side-header_box_menu_new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to "#" do
          .group__name
            = group.name
          .group__message
